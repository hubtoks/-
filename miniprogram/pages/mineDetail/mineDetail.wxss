.body{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  height: 100vh;
}


.card{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #ddd;
  padding:10rpx 10rpx;
}

.text{
  font-weight: bolder;
  margin-left: 20rpx;
}
.card .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.weui-input{
  width: 25%;
}

.btn{
  position: absolute;
  background-color:transparent;
}

.button-container {
  margin-top: 30rpx;
  text-align: center;
  align-items: center;
}

.submit-button {
  background-color: #38B0DE;
  color: white;
  border-radius: 4px;
}
