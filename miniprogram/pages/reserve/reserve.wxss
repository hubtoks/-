}

.desc{
  padding: 30rpx 40rpx;
  
}

.bottom-line {
  position: absolute;
	bottom: 0;
	font-size: 30rpx;
	width: 100%;
	display: flex;
	align-content: center;
	justify-content: center;
	padding: 20rpx 0rpx;
	color: #3879C2;
	font-weight: bold;
	letter-spacing: 3rpx;
	background-image: linear-gradient(45deg, #F1F7FC, #D3E3F5);
}